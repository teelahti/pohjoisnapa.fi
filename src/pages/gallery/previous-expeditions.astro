---
import { Collection, getImages } from "../../components/images.ts";
import Layout from "../../layouts/Layout.astro";
import Gallery from "../../components/Gallery.astro";
import HeaderImages from "../../components/header-images";

const imgs = await getImages(Collection.Previous, Astro.currentLocale ?? "fi");
---

<Layout
  title="Kuvagalleria, kuvia aikaisemmilta retkikunnilta"
  headerImg={HeaderImages.Top7}
>
  <h2>Kuvia aikaisemmilta retkikunnilta</h2>

  <Gallery imgs={imgs} />
</Layout>
